<?xml version="1.0" encoding="utf-8"?>
<!-- https://handyopinion.com/rounded-rectangle-with-without-background-gradient-xml-in-android/ -->



<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>
    <shape android:shape="rectangle" >
        <gradient android:startColor="#CC5555"
            android:centerColor="#660000"
            android:endColor="#CC5555"
            android:type="linear"
            android:angle="90"/>

    </shape>
</item>


<item
    android:bottom="4dp"
    android:left="4dp"
    android:right="4dp"
    android:top="4dp">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle" android:padding="10dp">
        <gradient android:startColor="#FFCCCC"
            android:centerColor="#FFAAAA"
            android:endColor="#FFCCCC"
            android:gradientRadius="40dp"
            android:type="linear"
            android:angle="90"/>

    </shape>
</item>
</layer-list>